<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kgc.mapper.CourseMapper">
    <select id="getCourseByMajor" resultType="cn.kgc.pojo.Course" parameterType="java.lang.String">
        select * from tb_course where major=#{major}
    </select>
    <select id="getCoursenameByMajor" resultType="java.lang.String">
        select course_name from tb_course where major=#{major}
    </select>
    <select id="selectNamesByMajor" resultType="java.lang.String">
        SELECT course_name FROM tb_course WHERE major = #{major}
    </select>
</mapper>
